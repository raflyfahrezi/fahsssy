{
    "compilerOptions": {
        // Default
        "strict": true,
        "target": "es5",
        "skipLibCheck": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,

        // Added
        "rootDir": "src", // from rollup multi input
        "isolatedModules": false, // from rollup multi input
        "jsx": "react",
        "outDir": "dist",
        "sourceMap": true,
        "module": "ESNext",
        "declaration": true,
        "declarationDir": "dist", // from rollup multi input
        // "declarationDir": "types",
        "moduleResolution": "node",
        "emitDeclarationOnly": true,
        "allowSyntheticDefaultImports": true,

        // Path
        "baseUrl": ".",
        "paths": {
            "@/*": ["./src/*"]
        }
    },
    "exclude": ["node_modules"],
    "include": ["**/*.ts", "**/*.tsx"]
}
